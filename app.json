{
  "expo": {
    "name": "e-furniture-shipper-mobile",
    "slug": "e-furniture-shipper-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow E-Furniture to use your location."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow E-Furniture to access your photos.",
          "savePhotosPermission": "Allow E-Furniture to save photos.",
          "isAccessMediaLocationEnabled": "true"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow  E-Furniture to access your camera",
          "microphonePermission": "Allow  E-Furniture to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "scheme": "app-scheme"

  }
}
